version: "3.9"
services:
  docling:
    build: .
    container_name: docling
    ports:
      - "8080:8080"
    environment:
      DOCLING_API_KEY: "${DOCLING_API_KEY}"
      PORT: "8080"
    healthcheck:
      test: ["CMD", "curl", "-fsS", "http://localhost:8080/healthz"]
      interval: 30s
      timeout: 5s
      retries: 5
    deploy:
      resources:
        limits:
          cpus: "2.0"
          memory: "8g"
        reservations:
          cpus: "1.0"
          memory: "4g"
